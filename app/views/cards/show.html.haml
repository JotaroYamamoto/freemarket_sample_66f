.container
  .content
    %section.content__chapter
      %h2.chapter__head 支払い方法
      .chapter__inner
        %section
          .chapter__inner__title
            %h3.chapter__inner__title__text クレジットカード一覧
          .chapter__inner__setting-card
            %ul.chapter__inner__setting-card__list
              %li
                = form_with url: delete_cards_path, method: :post, local: true, id: 'charge-form' do |f|
                  -# カードブランドのアイコンを表示する場合-----
                  %figure
                    = image_tag "credit-cards/#{@card_src}", width: '26', height: '20', alt: @card_brand, id: "card_image"
                  -#----------------------------------
                  .content__credit-cards__list--pay-num
                    = "**** **** **** " + @default_card_information.last4
                  .content__credit-cards__list--pay-num
                    - exp_month = @default_card_information.exp_month.to_s
                    - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                    = exp_month + " / " + exp_year
                  %input{type: "hidden", name: "card_id", value: ""}
                  = f.submit "削除する", {class: "content__credit-cards__list__remove"}

.container
  .content
    %section.content__chapter
      %h2.chapter__head 支払い方法
      .chapter__inner
        %section
          .chapter__inner__title
            %h3.chapter__inner__title__text クレジットカード一覧
          .chapter__inner__setting-card
            %ul.chapter__inner__setting-card__list
              %li
                %form
                  %figure
                    = image_tag "Mastercard-logo.svg",width:"28px",height:"20px", alt:"masca"
                  .chapter__inner__setting-card__list__payment_number
                     = "**** **** **** " + @customer_card.last43
                  .chapter__inner__setting-card__list__payment_day
                  - exp_month = @customer_card.exp_month.to_s
                  - exp_year = @customer_card.exp_year.to_s.slice(2,3)
                  %h3
                    = exp_month + " / " + exp_year
                  = form_tag(card_delete_path, method: :post, id: 'charge-form',  name: "inputForm") do
                  %input{ type: "hidden", name: "card_id", value: "" }
                  %button 削除する
        .setting-not-resist
          = link_to "#", class: ".setting-not-resist" do
            %span 支払い方法について
            %i.fas.fa-angle-right
.showbox-top
  %ul.showbox-top__ul
    %li.showbox-top__ul__sub
      = link_to root_path, class: "showbox-top__ul__sub" do
        %span
          Fmarket
        = icon('fas', 'chevron-right', class: 'showbox-top__ul__sub--icon')
      = link_to "#", class: "showbox-top__ul__sub" do
        %span.now
          〇〇〇〇 夜景

.footer
  .under
    %ul.under__list
      %li.under__list--img
        = image_tag "footer-img.png", class: "under__list--img", alt:"logo"
    %p.under__title
      %span#top
        スマホで遊べます！
        %br
      %span#center
        フリマアプリ！
        %br
      %span#bottom
        Fmarket !

  .under-bar
    .under-bar__box1
      %h2
        Fmarketについて
      %ul.title
        %li.list
          会社概要
        %li.list
          採用情報
        %li.list
          プレスリリース
        %li.list
          公式ブログ
      %ul.link
        %li.link__list
          =link_to "https://www.wantedly.com/", class: "link__list" do
            Wantedly
        %li.link__list
          =link_to "https://www.facebook.com/", class: "link__list" do
            = icon('fab', 'facebook-square', class: "link__list--icon")
        %li.link__list
          =link_to "https://twitter.com/", class: "link__list" do
            = icon('fab', 'twitter', class: "link__list--icon")
    .under-bar__box2
      %h2
        ヘルプ・ガイド
      %ul.title
        %li.list
          Fmarketガイド
    .under-bar__box3

    .under-bar__bottom
      %h3
        = link_to root_path, class: "" do
          Fmarket
      %p
        Fmarket, Inc.
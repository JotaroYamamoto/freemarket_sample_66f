%h2 住所情報登録
= form_for @address do |f|
  = render "devise/shared/error_messages", resource: @address
  .field
    = f.label :post_number
    %br/
    = f.text_field :post_number
  .field
    = f.label :prefecture
    %br/
    = f.text_field :prefecture
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :town
    %br/
    = f.text_field :town
  .field
    = f.label :building
    %br/
    = f.text_field :building
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
